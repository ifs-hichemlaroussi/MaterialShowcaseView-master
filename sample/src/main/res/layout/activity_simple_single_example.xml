<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".TargetExamples">

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/corner_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:src="@drawable/add_24dp" />

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/show_corner_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/show_center_button"
		android:layout_centerHorizontal="true"
		android:text="Near border Showcase" />

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/show_center_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/show_target_button"
		android:layout_centerHorizontal="true"
		android:text="Middle Showcase" />

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/show_target_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/popup_button"
		android:layout_centerHorizontal="true"
		android:text="Target Pressable Showcase" />

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/popup_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@id/reset_button"
		android:layout_centerHorizontal="true"
		android:text="Popup" />

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/reset_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:text="Reset" />

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/center_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/add_24dp"
		android:layout_above="@+id/show_corner_button"
		android:layout_centerHorizontal="true" />


</RelativeLayout>
